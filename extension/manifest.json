{
  "manifest_version": 2,
  "name": "Claude API Listener",
  "version": "1.0",
  "description": "Listens to Claude API responses and forwards them to a Node.js server",
  "permissions": [
    "tabs",
    "debugger",
    "*://*.claude.ai/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.claude.ai/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Claude API Listener"
  }
}
